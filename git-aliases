[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = cyan bold
	old = magenta bold
	new = green bold
[color "status"]
	added = yellow bold
	changed = green bold
	untracked = cyan bold
[alias]
	logs = log --numstat
	ci = commit
	co = checkout
	cob = checkout -b
	cia = commit --amend
	ciao = commit --amend --no-edit
	cim = commit -m
	cif = !sh -c 'git commit --fixup=$1' -
	cir = !sh -c 'git commit --reuse-message=${1:-HEAD}' -
	rmi = rebase master -i --autosquash
	rma = rebase master
	ri = rebase -i --autosquash
	rc = rebase --continue
	ra = rebase --abort
	re = rebase
	s = status
	a = add
	ap = add -p
	b = branch
	bv = branch -v
	bvv = branch -vv
	l = logs
	lp = log -p
	m = merge
	ma = merge --abort
	d = diff
	dc = diff --cached
	rs = reset
	rh = reset HEAD
	rhp = reset HEAD^
	ph = push
	pl = pull
	f = fetch
	fa = fetch --all
[push]
	default = matching
	followTags = true
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
	ff = false
[core]
[merge "ours"]
	driver = true
[credential]
	helper = cache --timeout=86400
[gitflow "feature.finish"]
	no-ff = true
[pull]
	ff = only
