[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	logs = log --numstat
	a = add
	ap = add -p
	b = branch
	bv = branch -v
	bvv = branch -vv
	ci = commit -v
	cia = commit --amend
	ciao = commit --amend --no-edit
	cim = commit -vm
	cif = !sh -c 'git commit --fixup=$1' -
	cir = !sh -c 'git commit --reuse-message=${1:-HEAD}' -
	co = checkout
	cob = checkout -b
	cop = checkout -p
	d = diff
	dc = diff --cached
	dm = !sh -c 'diffuse -m "$@" &' -
	f = fetch -p
	fa = fetch --all -p
	l = log --numstat
	lp = log -p
	m = merge
	ma = merge --abort
	mf = merge --ff
	ph = push
	phf = push -f
	phu = push -u
	pl = pull
	q = reset
	qh = reset HEAD
	qhp = reset HEAD^
	r = rebase
	ri = rebase -i --autosquash
	ra = rebase --abort
	rc = rebase --continue
	rs = rebase --skip
	rma = rebase master
	rmi = rebase master -i --autosquash
	s = status
[push]
	default = matching
	followTags = true
[rerere]
	enabled = true
[merge]
	conflictstyle = diff3
	ff = false
[merge "ours"]
	driver = true
[credential]
	helper = cache --timeout=86400
[gitflow "feature.finish"]
	no-ff = true
[pull]
	ff = only
